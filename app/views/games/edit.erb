<h1>Edit your game</h1>
<form action='/games/<%=@game.id%>' method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH">
  <div>
    <label>Name:</label>
    <input type="text" name="game[name]" value="<%=@game.name%>">
  </div>
  
  <div>
    <label>Release Date:</label>
    <input type="text" name="game[release_date]" value="<%=@game.release_date%>">
  </div>
  <br>
  <div>
    <label>Genres:</label>
    <%Genre.all.each do |genre| %>
    <label><%=genre.name%></label>
      <input id="<%= genre.name %>" type="checkbox" name="game[genres][]" value="<%= genre.id %>">
    <%end%>
  </div>
  
  <div>
    <label>Platform:</label>
    <input type="text" name="game[platform]" value="<%=@game.platform%>">
  </div>
  
  <button type="submit">Edit Game</button>
</form>
